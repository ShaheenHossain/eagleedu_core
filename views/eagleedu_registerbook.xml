    <record id="action_eagleedu_registerbook" model="ir.actions.act_window">
        <field name="name">Register Book</field>
        <field name="res_model">eagleedu.registerbook</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': True}</field>

        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the your first student here.
            </p>
        </field>
    </record>


    <menuitem id="eagleedu_registerbook_submenu" name="Register Book"
            parent="eagleedu_main_menu_admission" action="action_eagleedu_registerbook"/>


</eagle>
