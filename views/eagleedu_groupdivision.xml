<?xml version="1.0" encoding="utf-8"?>
<eagle>

    <record id="view_eagleedu_groupdivision_tree" model="ir.ui.view">
        <field name="name">eagleedu.groupdivision.tree</field>
        <field name="model">eagleedu.groupdivision</field>
        <field name="arch" type="xml">
            <tree string="Group Division Name">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_eagleedu_groupdivision_form" model="ir.ui.view">
        <field name="name">eagleedu.groupdivision.form</field>
        <field name="model">eagleedu.groupdivision</field>
        <field name="arch" type="xml">
            <form string="Group Division Name">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="groupdivisions_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_eagleedu_groupdivision" model="ir.actions.act_window">
        <field name="name">Group Division Name</field>
        <field name="res_model">eagleedu.groupdivision</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p groupdivision="oe_view_nocontent_create">
                Create the your first academic Section of Class here.
            </p>
        </field>
    </record>

    <menuitem id="eagleedu_main_menu_conf" name="Configuration" parent="eagleedu_menu_root"/>

    <menuitem action="action_eagleedu_groupdivision" parent="eagleedu_submenu_class_conf"
              id="menu_action_eagleedu_groupdivision" name = "Group Division" sequence="40"/>


</eagle>
